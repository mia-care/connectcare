{
  "integrations": [
    {
      "source": {
        "type": "jira",
        "authentication": {
          "secret": {
            "fromEnv": "JIRA_WEBHOOK_SECRET"
          }
        }
      },
      "pipelines": [
        {
          "processors": [
            {
              "type": "filter",
              "celExpression": "eventType == 'jira:version_updated'"
            },
            {
              "type": "mapper",
              "outputEvent": {
                "deploymentName": "{{ version.name }}",
                "projectKey": "{{ version.projectId }}",
                "status": "{{ version.released }}",
                "timestamp": "{{ timestamp }}"
              }
            }
          ],
          "sinks": [
            {
              "type": "mongo",
              "url": {
                "fromEnv": "MONGO_URL"
              },
              "collection": "events"
            }
          ]
        }
      ]
    }
  ]
}
